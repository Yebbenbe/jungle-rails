<section class="admin-categories-new">

  <header class="page-header">
    <h1>Admin &raquo; New Category</h1>
  </header>

  <div class="container">
    <div class="row">
      <div>
      
        <%= form_for [:admin, @category], html: { class: 'mt-3' } do |form| %>
          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group d-flex">
            <%= form.text_field :name, placeholder: 'Category Name', class: 'form-control mr-2' %>
            <%= form.submit 'Create Category', class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= link_to 'Back to Categories', [:admin, :categories], class: 'btn btn-info btn-block' %>
        </div>
      </div>
    </div>
  </div>

</section>
